datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String      @default(uuid()) @id
  email           String      @unique
  username        String      @unique
  password        String
  realname        String?
  profilePicUrl   String?
}

